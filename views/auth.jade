extends _bootstrap
append styles
  link(href='css/bootstrap.min.css', rel='stylesheet')
  link(href='css/index.css', rel='stylesheet')
block body
  +navbar("Ideally", "dropdown_menu", "", "/")
  .container
    .row
      .col-md-6.col-md-offset-3.margined-top
        if (!action || action === 'signin')
          form(method="post", action="/auth/in")
            h3 Authorization
            +input("text", "email", "", "Email")
            +input("password", "password", "", "Password")
            div(style="display:inline-block;width:100%;")
              input.btn(class="btn-success btn-lg",type="submit",value="Sign in",style="float:left;width:47%;")
              a.btn(class="btn-primary btn-lg", href="/auth?action=signup",style="float:right;width:47%;") Sign up
            h4.margined-top.text-center or
            a.btn(class="btn-default btn-block btn-lg gh",href="/auth?type=gh",role="button") Sign in with Github
        else if (action === 'signup')
          form(method="post", action="/auth/up")
            h3 Registration
            +input("text", "email", "", "Email")
            +input("password", "password", "", "Password")
            +input("password", "password", "", "Password repeat")
            div(style="display:inline-block;width:100%;")
              input.btn(class="btn-success btn-lg",type="submit",value="Sign up",style="float:left;width:47%;")
              a.btn(class="btn-primary btn-lg", href="/auth",style="float:right;width:47%;") Sign in

    hr
    footer
      p 
